# =================================
# Database Configuration (External MySQL Server)
# =================================
# Full JDBC URL to your external MySQL database
# Format: jdbc:mysql://HOST:PORT/DATABASE?useSSL=false&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_URL=jdbc:mysql://your-mysql-host:3306/library_db?useSSL=false&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_db_password

# =================================
# JWT Configuration
# =================================
# Generate a secure random key (at least 256 bits)
# You can generate one using: openssl rand -hex 32
JWT_SECRET=your_secure_jwt_secret_here_min_256_bits
JWT_ACCESSTOKEN_EXPIRATION=36000
JWT_REFRESHTOKEN_EXPIRATION=864000

# =================================
# Application Configuration
# =================================
APP_PORT=9080
SERVER_PORT=9080
APP_COOKIE_DOMAIN=yourdomain.com
APP_COOKIE_SECURE=true

# =================================
# Spring Configuration
# =================================
SPRING_JPA_HIBERNATE_DDLAUTO=update
SPRING_JPA_SHOWSQL=false
LOG_LEVEL=INFO
LOG_LEVEL_SECURITY=WARN

# =================================
# Production Notes
# =================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update all values with secure credentials
# 3. Never commit .env file to version control
# 4. For production, consider using Docker secrets or environment-specific config
